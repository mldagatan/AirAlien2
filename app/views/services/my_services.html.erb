<div class="container">
	<h1>My Services</h1>
	<%= link_to "Create New Service", new_my_service_path, class: "btn btn-lg btn-primary" %>

	<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Category</th>
			<th>Rate</th>
			<th>Discounted Rate</th>
			<th>Status</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% @services.each do |service| %>
			<tr>
				<td><%= service.id %></td>
				<td><%= service.title %></td>
				<td><%= service.service_category.title %></td>
				<td><%= number_to_currency service.rate %></td>
				<td><%= number_to_currency service.discounted_rate %></td>
				<td><%= service.status_readable %></td>
				<td>
					<%= link_to "Edit", edit_my_service_path(service), class: "btn btn-xs btn-warning" %>
					<%= link_to "Review", "#", class: "btn btn-xs btn-warning" %>
					<%= link_to "Delete", my_service_path(service), method: :delete, data: {confirm: "are you sure you want to delete this service?"}, class: "btn btn-xs btn-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>

