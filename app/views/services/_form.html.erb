<%= simple_form_for @service, url: url, method: method do |f| %>
	<%= f.input :professional_id, as: :hidden, input_html: {value: current_user.id} %>
	<%= f.input :title, as: :string %>
	<%= f.association :service_category, as: :select, include_blank: false %>
	<%= f.input :description %>
	<%= f.input :rate %>
	<%= f.input :discounted_rate %>
	<h4>Service Address</h4>
	<%= f.simple_fields_for :address do |add| %>
		<%= add.input :address_type, as: :select, collection: Address.address_types.each_with_index.map{|t, i| [t, i]}, include_blank: false %>
		<p><i>Selecting area will not require filling out the First Line</i></p>
		<div class="row">
			<div class="col-sm-12 col-md-6">
				<%= add.input :first_line, as: :string %>
			</div>
			<div class="col-sm-12 col-md-6">
				<%= add.input :second_line, as: :string %>
			</div>
			<div class="col-sm-6 col-md-3">
				<%= add.input :city %>
			</div>
			<div class="col-sm-6 col-md-3">
				<%= add.input :state %>
			</div>
			<div class="col-sm-6 col-md-3">
				<%= add.input :country, include_blank: false %>
			</div>
			<div class="col-sm-6 col-md-3">
				<%= add.input :postal_code %>
			</div>
		</div>
	<% end %>
	<h4>Images</h4>
	<div id="images" class="row">
		<%= f.simple_fields_for :images do |img| %>
			<%= render "image_fields", f: img %>
		<% end %>
		<div class="links col-sm-12">
			<%= link_to_add_association "Add Image", f, :images, class: "btn btn-warning" %>
		</div>
	</div>
	<div class="row">
		<div class="col xs-12">
			<%= f.submit class: "btn btn-lg btn-success" %>
		</div>		
	</div>
<% end %>