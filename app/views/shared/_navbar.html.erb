


<% unless current_page?(root_path) %>
  <div class="hero-header-noimage"> 
<% else %>
  <div class="hero-header-navwrap" style="background-image: url('/assets/sample-banner-stockinger.jpg')">
<% end %>

    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top nav-gradient">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
               <img src="/assets/logo-gohiso.jpg" alt="GoHiSo" height="40" />
          </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">

          <%= form_tag search_path, class: "navbar-form navbar-left", method: :get do %>
            <div class="form-group">
              <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control" %>
            </div>
          <% end %>

          <ul class="nav navbar-nav navbar-right">
            <li class="hilite">
              <%= link_to new_room_path do %>
                Become a Professional
              <% end %>
            </li>

            <% if(!user_signed_in?) %>
              <li>
                 <a href="#modal-gohiso-login" data-toggle="modal" data-target="#modal-gohiso-login">
                  Log in
                 </a>
              </li>
              <li><a href="#modal-gohiso-signup" data-toggle="modal" data-target="#modal-gohiso-signup">
                  Sign Up
                 </a></li>
            <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= image_tag avatar_url(current_user), class: "img-circle avatar-small", alt: "?" %>&nbsp;
                  <%= current_user.fullname %> <span class="caret"></span>
                </a>

                <ul class="dropdown-menu">
                  <li><%= link_to "Your Listings", rooms_path %></li>
                  <li><%= link_to "Your Reservations", your_reservations_path %></li>
                  <li><%= link_to "Your Trips", your_trips_path %></li>
                  <li><a href="exp_your_itineraries">Your Itineraries</a></li>
                  <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="#">Account Setting</a></li>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            <% end %>

            <li>
              <%= link_to conversations_path do %>
                Messages
              <% end %>
            </li>


            
          </ul>
          
        </div><!--/.nav-collapse -->

      </div>
    </nav>

    <% if current_page?(root_path) %>
    <div class="container">
        <div class="text-desc">
            <h2>Marlon Stockinger</h2>
            <p>Nonumy postea malorum ex pro, ne luptatum accommodare vis. Ex vim illum lorem, ad est suas mediocritatem.</p>
            <div class="rating-stars">
                <i class='fa fa-star'></i>
                <i class='fa fa-star'></i>
                <i class='fa fa-star'></i>
                <i class='fa fa-star'></i>
                <i class='fa fa-star-o'></i>
            </div>
        </div>
    </div>

    <% end %>

</div>

<% if current_page?(root_path) || current_page?(homes_path) %>
  <%= render 'shared/navtabs' %>
<% end %>


