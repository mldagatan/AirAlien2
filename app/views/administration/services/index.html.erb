<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Professional</th>
			<th>Category</th>
			<th>Title</th>
			<th>Status</th>
			<th>Location</th>
			<th>Add Type</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% @services.each do |service| %>
			<tr>
				<td><%= service.id %></td>
				<td><%= service.professional.email %></td>
				<td><%= service.service_category.title %></td>
				<td><%= service.address.address_type_readable %></td>
				<td><%= %></td>
				<td><%= service.address.basic_address %></td>
				<td>
					<%= simple_form_for service, url: status_update_administration_service_path(service), method: :patch do |f| %>
						<%= f.input :status, as: :select, collection: Service::Service.statuses.each_with_index.map{|a,i| [a, i]}, include_blank: false, input_html: {onchange: "this.form.submit()"}, label: false %>
					<% end %>
				</td>
				<td>
					<%= link_to "View", administration_service_path(service), class: "btn btn-primary btn-xs" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>