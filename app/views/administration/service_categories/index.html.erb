<%= link_to "New Category", new_administration_service_category_path, class: "btn btn-lg btn-primary" %>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Slug</th>
			<th>Services</th>
			<th>Min Rate</th>
			<th>Max Rate</th>
			<th>Comm %</th>
			<th>Questions</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% @service_categories.each do |category| %>
			<tr>
				<td><%= category.id %></td>
				<td><%= category.title %></td>
				<td><%= category.slug %></td>
				<td><%= category.services.size %></td>
				<td><%= number_to_currency category.minimum_rate %></td>
				<td><%= number_to_currency category.maximum_rate %></td>
				<td><%= category.commission_percentage %>%</td>
				<td><%= category.questions.size %></td>
				<td>
					<%= link_to "Edit", edit_administration_service_category_path(category), class: "btn btn-sm btn-warning" %>
					<%= link_to "Delete", administration_service_category_path(category), method: :delete, data: {confirm: "Are you sure you want to delete this category?"}, class: "btn btn-sm btn-danger" %>
					</td>
			</tr>
		<% end %>
	</tbody>
</table>