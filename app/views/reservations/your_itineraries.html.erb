
<div class="container myDashboard"> 

    <div id="myDashboard" class="row">

		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><i class="fa fa-list-alt"></i>&nbsp;&nbsp;<%= link_to "Your Listing", your_listings_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%= link_to "Your Reservations", experiences_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><i class="fa fa-history"></i>&nbsp;&nbsp;<%= link_to "Your Itineraries", your_itineraries_path, class: "sidebar-link active" %></li>
			</ul>
		</div>

		<div class="col-md-9">
              <h3 class="h3">Your Itineraries</h3>
              <div class="myItineryList">


              	<% @itineraries.each do |itinerary| %>

                    <div class="item">
                           <%= link_to experience_path(itinerary.experience) do %>
                           <div class="itr_img" style="background-image: url('<%= itinerary.experience.expphotos[0].image.url(:medium) %>');">
                           </div>
                           <% end %>

                           <!--# Dyanamic Avatar -->
                           <!--

                           Hi Ernest, can you fix the "avatar_url(...)"? i'm not able to get the full path of the image. thanks!
-->
                           <%= link_to user_path(itinerary.experience.user_id) do %>
                             <%= image_tag avatar_url(itinerary.experience.user), class: "item-avatar" %>
                           <% end %>
                           

                           <!--# TEMPORARY Static Avatar 
							<div class="item-avatar" style="background-image: url('http://ec2-34-208-88-113.us-west-2.compute.amazonaws.com:3002/assets/cards_-45-430e9ef4295121ddded70f1e7e9cf75965d405239e42b9122bebe43dd843ef04.png')"></div>
						-->

                          <div class="itr_details">
                                <div class="item-header">
                                     <h4> <%= link_to experience_path(itinerary.experience) do %><%= itinerary.experience.experience_name %><% end %></h4>
                                </div>
                                <p>May 20-22, 2017  &bull; <%= itinerary.experience.city %>  &bull; Php <%= itinerary.experience.price %></p>
                                <br />
                                <div class="link_options">
                                  <p> <a href="#"><i class="fa fa-credit-card"></i> &nbsp;View Receipt</a></p>
                                  <p> <a href="#"><i class="fa fa-money"></i> &nbsp;Send or Request Money</a></p>
                                  <p> <a href="#"><i class="fa fa-star"></i> &nbsp;Read your Review</a></p>
                                </div>
                          </div> 
                    </div>

                <% end %>

              </div>
              <!--/myItineryList -->


		</div>

	</div>

</div>
<!--/container -->