
<div class="container myDashboard"> 

    <div id="myDashboard" class="row">
	
		<div class="col-md-3">
			<ul class="sidebar-list">
				<li class="sidebar-item"><i class="fa fa-list-alt"></i>&nbsp;&nbsp;<%= link_to "Your Listing", experiences_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><i class="fa fa-calendar"></i>&nbsp;&nbsp;<%= link_to "Your Reservations", experiences_path, class: "sidebar-link" %></li>
				<li class="sidebar-item"><i class="fa fa-history"></i>&nbsp;&nbsp;<%= link_to "Your Itineraries", your_itineraries_path, class: "sidebar-link active" %></li>
			</ul>
		</div>

		<div class="col-md-9">
              <h3 class="h3">Your Itineraries</h3>
              <div class="myItineryList">


              	<% @itineraries.each do |itinerary| %>

                    <div class="item">
                           <%= link_to experience_path(itinerary.experience) do %>
                           <div class="itr_img" style="background-image: url('<%= itinerary.experience.expphotos[0].image.url(:medium) %>');">
                           </div>
                           <% end %>

                           <%= link_to user_path(itinerary.experience.user_id) do %>
                             <div class="item-avatar" style="background-image: url('<%= avatar_url(itinerary.experience.user) %>')"></div>
                           <% end %>

                          <div class="itr_details">
                                <div class="item-header">
                                     <h4><a href="#"><%= itinerary.experience.experience_name %></a></h4>
                                </div>
                                <p>May 20-22, 2017  &bull; Makati  &bull; Php <%= itinerary.total %></p>
                                <br />
                                <div class="link_options">
                                  <p> <a href="#"><i class="fa fa-credit-card"></i> &nbsp;View Receipt</p>
                                  <p> <a href="#"><i class="fa fa-money"></i> &nbsp;Send or Request Money</p>
                                  <p> <a href="#"><i class="fa fa-star"></i> &nbsp;Read your Review</p>
                                </div>
                          </div> 
                    </div>

                <% end %>

              </div>
              <!--/myItineryList -->


		</div>

	</div>

</div>
<!--/container -->