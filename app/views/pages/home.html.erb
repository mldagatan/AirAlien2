<div class="card-header">
  <h3>Explore the world</h3>
  <p class="text-center">See what peopel are travelling, all around the world.</p>
</div>
<div class="container">
    <div id="gh-slider-002" class="ghs-slider">

	<% @rooms.each do |room| %>

        <div class="item">
           <a href="#">
           <%= image_tag room.photos[0].image.url(:medium) if room.photos.length > 0 %>
           </a>
           <!--# will fix this soon -->
			<div class="panel-body hide">
				<%= image_tag avatar_url(room.user), class: "img-circle avatar-small" %>&nbsp;
				<%= link_to room.listing_name, room %>
			</div>           
        </div> 

	<% end %>

    </div>
</div>
<br />
<br />

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'dd-mm-yy',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})


</script>
