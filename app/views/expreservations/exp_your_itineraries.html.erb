<style>
	.panel-body {
		color: #ddd;
	}

	.experience-image {
		max-width: 140px;
	}
</style>

<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			
			<li class="sidebar-item"><%= link_to "Your Itineraries", your_trips_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Itineraries
			</div>
			<div class="panel-body">
				
				<% @itineraries.each do |itinerary| %>
					<% expphoto = itinerary.experience.expphotos[0] %>
					<div class="row">

						<div class="col-md-2">
							<%= itinerary.experience.experience_name %>
						</div>	
						<div class="col-md-6">
							<%= link_to experience_path(itinerary.experience) do %>
								<%= image_tag expphoto.image_file_name, class: "experience-image" %>
								<img src="" class="experience-image" />
							<% end %>
						</div>	
						<div class="col-md-2">
							<%= link_to user_path(itinerary.experience.user) do %>
								<%= image_tag avatar_url(itinerary.experience.user), class: "img-circle avatar-medium" %>
							<% end %>	
						</div>	
						<div class="col-md-2 right">
							<h4>$<%= itinerary.total %></h4>
						</div>	
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>